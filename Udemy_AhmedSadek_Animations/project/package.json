{
  "name": "src",
  "version": "1.0.0",
  "description": "UI Animations Effects in Fractal",
  "main": "index.js",
  "scripts": {
    "fractal:start": "fractal start --sync",
    "fractal:build": "fractal build",
    "compile:sass": "node-sass src/main.scss public/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/style.comp.css -o public/style.prefix.css",
    "compress:css": "node-sass public/style.prefix.css public/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "start": "npm-run-all compile:sass prefix:css compress:css fractal:start"
  },
  "author": "Lei Zhong",
  "license": "ISC",
  "dependencies": {
    "@frctl/fractal": "^1.5.15",
    "autoprefixer": "^10.4.9",
    "concat": "^1.0.3",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0"
  },
  "devDependencies": {
    "gulp": "^4.0.2"
  }
}
